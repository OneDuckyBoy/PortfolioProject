@model Portfolio.Models.Category

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        .container {
            max-width: 600px;
            margin: auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .details {
            margin-top: 20px;
            padding-bottom: 20px;
        }

            .details label {
                font-weight: bold;
                display: block;
                margin-top: 10px;
            }

            .details p {
                margin: 5px 0;
            }

            .details img {
                max-width: 100%;
                height: auto;
                display: block;
                margin-top: 10px;
            }

        .back-button {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #007bff;
            text-decoration: none;
        }

            .back-button:hover {
                text-decoration: underline;
            }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Детайли за категориите</h1>
        <div class="details">
            <label>Id:</label>
            <p>@Model.Id</p>
            <label>Име:</label>
            <p>@Model.Name</p>
            <label>Описание:</label>
            <p>@Model.Description</p>
            <label>Снимка:</label>
            <img src="@Model.Image.Path" alt="Image">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">промяна на категорията</a>
        </div>
        <a asp-action="Index" class="btn">Назад към списъка</a>
    </div>
</body>
</html>