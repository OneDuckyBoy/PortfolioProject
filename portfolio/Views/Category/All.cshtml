@{
    ViewData["Title"] = "All Categories";
}

@model IEnumerable<Portfolio.Models.Category>

<h1>All Categories</h1>

<div class="container">
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@category.Image.Path" alt="@category.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <a asp-action="ProjectsInCategory" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-primary">View Projects</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
