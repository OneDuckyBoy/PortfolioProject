@model CommentCreateViewModel

<h2>Създай коментар</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="alert-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProjectId"></label>
        <select asp-for="ProjectId" asp-items="Model.Projects" class="form-control"></select>
        <span asp-validation-for="ProjectId" class="alert-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Създай кометар</button>
</form>

