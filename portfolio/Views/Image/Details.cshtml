@{
}
@model Image

<div class="col-md-4 image-container">
    <div class="card">
        <img class="card-img-top" src="@Model.Path" alt="@Model.Path">
        <div class="card-body">
            <p class="card-text">ИД: @Model.Id</p>
            <p class="card-text">Път до снимката: @Model.Path</p>

            <p class="card-text">
                <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Промени снимката</a> 
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Изтрий снимката</a>
            </p>
        </div>
    </div>
</div>